@model List<Slider>
<div class="container-fluid">
    <table class="table" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td> @item.Description </td>
                    <td><img src="~/Photos/Sliders/@item.ImageUrl" style="width:100px;height:100px;" alt="Alternate Text" /></td>

                    <td>
                        <a onclick="if(!confirm('Are you Sure?')){return false;}" asp-action="doactive" asp-controller="slider" asp-route-id="@item.Id">
                            @if (!item.IsActive)
                            {
                                <button class="btn btn-danger">DeActive</button>
                            }
                            else
                            {
                                <button class="btn btn-success">Active</button>
                            }
                        </a>
                    </td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@item.Id">
                            <i style="color:orange;font-size:18px;" class="fas fa-wrench"></i>
                        </a>

                    </td>
                    <td>
                        <a onclick="if(!confirm('Are you Sure?')){return false;}" asp-action="delete" asp-controller="slider" asp-route-id="@item.Id">
                            <i style="color:red;font-size:18px;" class="fas fa-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="add" asp-controller="slider" class="btn btn-primary w-100">Add Slider</a>
</div>