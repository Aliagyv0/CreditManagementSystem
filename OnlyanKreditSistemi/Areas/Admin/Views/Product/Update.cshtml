@model Product
<div class="container-fluid mt-3">
    <form method="post">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Category" class="form-label">Category</label>
            <select class="form-select" asp-for="@Model.CategoryId" aria-label="Default select example">
                @foreach (Category category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Price" class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="@Model.Price">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Brand" class="form-label">Brand</label>
            <input type="text" class="form-control" asp-for="@Model.Brand">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Model" class="form-label">Model</label>
            <input type="text" class="form-control" asp-for="@Model.Model">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Image" class="form-label">Image</label>
            <input type="file" class="form-control" accept="image/*" asp-for="@Model.Image">
        </div>
        <button type="submit" class="btn btn-primary w-100">Update Product</button>
    </form>
</div>
