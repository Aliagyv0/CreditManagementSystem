
@model EmployeeUpdateDto
<div class="container-fluid mt-3">
    <form method="post">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Surname" class="form-label">Surname</label>
            <input type="text" class="form-control" asp-for="@Model.Surname">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="@Model.Email">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Username" class="form-label">Username</label>
            <input type="text" class="form-control" asp-for="@Model.Username">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Phone" class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="@Model.Phone">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Position" class="form-label">Position</label>
            <input type="text" class="form-control" asp-for="@Model.Position">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.CurrentPassword" class="form-label">CurrentPassword</label>
            <input type="password" class="form-control" asp-for="@Model.CurrentPassword">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Password" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="@Model.Password">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.ConfirmPassword" class="form-label">ConfirmPassword</label>
            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.BranchId" class="form-label">Branch</label>
            <select class="form-select" asp-for="@Model.BranchId" aria-label="Default select example">
                @foreach (Branch branch in ViewBag.Branches)
                {
                    <option value="@branch.Id">@branch.Name</option>

                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Update Employee</button>
    </form>
</div>
