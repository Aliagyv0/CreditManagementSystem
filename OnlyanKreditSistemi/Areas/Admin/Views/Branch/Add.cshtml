@model Branch
<div class="container-fluid mt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
        </div>
         <div class="form-group mb-3">
            <label asp-for="@Model.Address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="@Model.Address">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.MerchantId" class="form-label">Merchant</label>
            <select class="form-select" asp-for="@Model.MerchantId" aria-label="Default select example">
                <option selected disabled>Open this select menu</option>

                @foreach (Merchant merchant in ViewBag.Merchants)
                {
                    <option value="@merchant.Id">@merchant.AppUser.UserName</option>
                    
                }
               
            </select>
        </div>

    
        <button type="submit" class="btn btn-primary w-100">Add Branch</button>
    </form>
</div>