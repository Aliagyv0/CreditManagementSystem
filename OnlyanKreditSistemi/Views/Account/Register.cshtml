@model CustomerPostDto

<style>
    .form-control{
        color: black !important;
        border: var(--bs-border-width) solid var(--bs-border-color) !important;
        padding: .375rem .75rem !important;
        border-radius: var(--bs-border-radius) !important;
    }
</style>

<div class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="p-5 p-md-5 rounded shadow-sm">
                    
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                <label asp-for="Name" class="form-label">Name</label>
                                <input type="text" class="form-control" asp-for="Name" required>
                            </div>
                            <div class="col-12">
                                <label asp-for="Surname" class="form-label">SurName</label>
                                <input type="text" class="form-control" asp-for="Surname" required>
                            </div>
                            <div class="col-12">
                                <label fasp-for="Username" class="form-label">UserName</label>
                                <input type="text" class="form-control" asp-for="Username" required>

                            </div>
                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email </label>
                                <input type="email" class="form-control" asp-for="Email" required>

                            </div>
                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Password </label>
                                <input type="password" class="form-control" asp-for="Password" required>
                            </div>
                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password </label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" required>
                               </div>
                            <div class="col-12">
                                <label asp-for="Occupation" class="form-label">Occupation</label>
                                <input type="text" class="form-control" asp-for="Occupation" required>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input type="text" class="form-control" asp-for="Address" required>
                            </div>
                            <div class="col-12">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input type="text" class="form-control" asp-for="Phone" required>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" name="iAgree" id="iAgree" required>
                                    <label class="form-check-label text-secondary" for="iAgree">
                                        I agree to the <a href="#!" class="link-primary text-decoration-none">terms and conditions</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit">Sign up</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-5 mb-4 border-secondary-subtle">
                            <div class="col-12">
                                <p class="m-0 text-secondary text-center">Already have an account? <a asp-action="login" asp-controller="account" class="link-primary text-decoration-none">Sign in</a></p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>