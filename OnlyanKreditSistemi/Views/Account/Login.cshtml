@model OnlyanKreditSistemi.Models.Account.LoginModel

<style>
    .form-control {
        color: black !important;
        border: var(--bs-border-width) solid var(--bs-border-color) !important;
        padding: .375rem .75rem !important;
        border-radius: var(--bs-border-radius) !important;
    }
</style>
<div class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="p-5 p-md-5 rounded shadow-sm">
                    
                    <form method="post">
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12">
                                <label asp-for="Username" class="form-label">UserName Or Email</label>
                                <input type="text" class="form-control" asp-for="Username" required>
                            </div>                        
                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Password </label>
                                <input type="password" class="form-control" asp-for="Password" required>
                            </div>                         
                       
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-5 mb-4 border-secondary-subtle">
                            <div class="col-12">
                                <p class="m-0 text-secondary text-center">Do you forget password? <a asp-action="ForgetPassword" asp-controller="account" class="link-primary text-decoration-none">Reset Password</a></p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>