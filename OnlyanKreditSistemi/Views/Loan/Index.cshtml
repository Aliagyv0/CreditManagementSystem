@model ICollection<Loan>
<style>
    .ui-w-40 {
        width: 40px !important;
        height: auto;
    }

    .card {
        box-shadow: 0 1px 15px 1px rgba(52,40,104,.08);
    }

    .ui-product-color {
        display: inline-block;
        overflow: hidden;
        margin: .144em;
        width: .875rem;
        height: .875rem;
        border-radius: 10rem;
        -webkit-box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        vertical-align: middle;
    }
</style>
<div class="px-3 my-5 clearfix">
    <!-- Shopping cart table -->
    <div>
        <div>
            <h2>Basket</h2>
        </div>
        <div>
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <th class="text-right py-3 px-4" style="width: 100px;">Date</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Total Amount</th>
                            <th class="text-center py-3 px-4" style="width: 120px;">Current Amount</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Montly Amount</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Months</th>
                            <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#" class="shop-tooltip float-none text-light" title="" data-original-title="Clear cart"><i class="ino ion-md-trash"></i></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-right font-weight-semibold align-middle p-4">@item.CreateDate</td>
                                <td class="text-right font-weight-semibold align-middle p-4">$@item.TotalPrice</td>
                                <td class="align-middle p-4"><input type="text" class="form-control text-center" value="@item.LoanDetail.CurrentAmount"></td>
                                <td class="text-right font-weight-semibold align-middle p-4">$@(item.LoanDetail.CurrentAmount<=0?0:item.MonthlyPrice)</td>
                                <td class="text-right font-weight-semibold align-middle p-4">@item.LoanDetail.Mounths</td>

                                <td class="text-center align-middle px-0">
                                    @if(item.LoanDetail.CurrentAmount>0){
                                    <a
                                    asp-action="payment" asp-controller="loan" asp-route-loanId="@item.Id"
                                       class="shop-tooltip close float-none text-success fas fa-file-invoice-dollar" title="" data-original-title="Remove"></a>
                                
                                    }
                                    </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>